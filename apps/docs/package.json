{
	"name": "@ecopages/docs",
	"private": true,
	"scripts": {
		"start": "bun run app.ts",
		"generate:llms": "bun run scripts/generate-llm-docs.ts",
		"dev": "bun run generate:llms && bun run app.ts --dev",
		"build": "bun run generate:llms && bun run app.ts --build",
		"preview": "bun run app.ts --preview",
		"watch:dev": "bun --watch run app.ts --dev"
	},
	"devDependencies": {
		"@ecopages/core": "workspace:*",
		"@ecopages/image-processor": "workspace:*",
		"@ecopages/mdx": "workspace:*",
		"@ecopages/postcss-processor": "workspace:*",
		"@ecopages/radiant": "latest",
		"@ecopages/kitajs": "workspace:*",
		"@ecopages/browser-router": "workspace:*",
		"@tailwindcss/postcss": "^4.0.0",
		"remark-gfm": "^4.0.1",
		"rehype-pretty-code": "^0.14.1",
		"@rehype-pretty/transformers": "^0.13.2",
		"rehype-raw": "^7.0.0",
		"shiki": "^3.20.0",
		"tailwindcss": "^4.0.0"
	}
}
