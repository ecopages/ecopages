{
	"$schema": "https://jsr.io/schema/config-file.v1.json",
	"name": "@ecopages/core",
	"version": "0.1.27",
	"exports": {
		".": "./src/index.ts",
		"./bin": "./src/bin/ecopages.ts",
		"./build-app": "./src/main/build-app.ts",
		"./config-builder": "./src/main/config-builder.ts",
		"./scripts-builder": "./src/main/scripts-builder.ts",
		"./project-watcher": "./src/main/project-watcher.ts",
		"./adapters/bun/fs-server": "./src/adapters/bun/fs-server.ts",
		"./adapters/bun/hmr": "./src/adapters/bun/hmr.ts",
		"./adapters/bun/shared/fs-server-response-factory": "./src/adapters/bun/shared/fs-server-response-factory.ts",
		"./adapters/bun/shared/fs-server-response-matcher": "./src/adapters/bun/shared/fs-server-response-matcher.ts",
		"./services/assets-dependency-service": "./src/services/assets-dependency-service.service.ts",
		"./services/css-parser-service": "./src/services/css-parser.service.ts",
		"./services/html-transformer-service": "./src/services/html-transformer.service.ts",
